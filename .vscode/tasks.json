{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile GLSL â†’ SPIRV",
      "type": "shell",
      "command": "glslangValidator",
      "args": [
        "-V",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.spv"
      ],
      "group": "build",
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 5
        }
      }
    }
  ]
}
